<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Вход</h1>
<%= form_tag(sessions_path, method: :post) do %>
	<div>
		<%= label_tag "Логин" %>
		<%= text_field_tag "login" %>
	</div>
	<div>
		<%= label_tag "Пароль" %>
		<%= password_field_tag "password" %>
	</div>

	<%= submit_tag "Войти" %>
<% end %>